@model IEnumerable<Sunny_Kasuvojula_A3__11_1_S4.Models.Employee>

@{
    ViewData["Title"] = "Employee List";
}

<!--DISPLAY THE LIST OF EMPLOYEES IN A TABLE-->
<h1>Employee List</h1>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
            <th>Date of Hire</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Firstname</td>
                <td>@employee.Lastname</td>
                <td>@(employee.DOB.HasValue ? employee.DOB.Value.ToShortDateString() : "N/A")</td>
                <td>@(employee.DateOfHire.HasValue ? employee.DateOfHire.Value.ToShortDateString() : "N/A")</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Add" class="btn btn-primary">Add New Employee</a>
