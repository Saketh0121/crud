@model Sunny_Kasuvojula_A3__11_1_S4.Models.Employee

<h1>Create Employee</h1>

<form asp-action="Add" class="d-flex flex-wrap">
    <!--ADD VALIDATION SUMAMRY-->
    @Html.ValidationSummary(true,"",new{@class="text-danger"})
    <div class="form-group w-50">
        <label asp-for="Firstname" class="control-label"></label>
        <input asp-for="Firstname" class="form-control" />
    </div>
    <div class="w-50 p-1 ml-3 mt-4">
        <span asp-validation-for="Firstname" class="text-danger"></span>
    </div>
    <div class="form-group w-50">
        <label asp-for="Lastname" class="control-label"></label>
        <input asp-for="Lastname" class="form-control" />
    </div>
    <div class="w-50 p-1 ml-3 mt-4">
        <span asp-validation-for="Lastname" class="text-danger"></span>
    </div>
    <div class="form-group w-50">
        <label asp-for="DOB" class="control-label"></label>
        <input asp-for="DOB" class="form-control" type="date" />
    </div>
    <div class="w-50 p-1 ml-3 mt-4">
        <span asp-validation-for="DOB" class="text-danger"></span>
    </div>
    <div class="form-group w-50">
        <label asp-for="DateOfHire" class="control-label"></label>
        <input asp-for="DateOfHire" class="form-control" type="date" />
    </div>
    <div class="w-50 p-1 ml-3 mt-4">
        <span asp-validation-for="DateOfHire" class="text-danger"></span>
    </div>
    <!--DISPLAY AND ADD THE EMPLOYEE AS A MANAGER FROM A DROPDOWN-->
    <div class="form-group w-50">
        <label asp-for="ManagerId" class="control-label"></label>
        <select asp-for="ManagerId" class="form-control" asp-items="ViewBag.ManagerListDropdown">
            <option value="">-- Select Manager --</option>
        </select>
    </div>
    <div class="w-50 p-1 ml-3 mt-4">
        <span asp-validation-for="ManagerId" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <input type="submit" value="Add New Employee" class="btn btn-primary" />
        <a class="btn btn-danger" asp-action="Add">Clear</a>
    </div>
</form>
